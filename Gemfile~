  gem 'uglifier', '>= 1.0.3'
  gem 'jquery-rails', '3.0.4'
  gem 'turbolinks', '1.1.1'
  gem 'jbuilder', '1.0.2'
end

group :doc do
  gem 'sdoc', '0.3.20', require: false
end


group :development, :test do
  gem "capybara"
  gem 'selenium-webdriver'
  gem 'spork-rails', '4.0.0'
  gem 'guard-spork', '1.5.0'
  gem 'childprocess'#, '0.3.6'
end


